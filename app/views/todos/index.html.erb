<h1>Listing all the todos</h1>

<p>
  <%= link_to "Create a Todo",  new_todo_path %>
</p>
<p>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @allTodos.each do |todo| %>
    <tr>
      <td><%= todo.name %></td>
      <td><%= todo.description %></td>
      <td><%= link_to "Edit", edit_todo_path(todo) %></td>
      <td><%= link_to "Show", todo_path(todo) %></td>
    </tr>
  <% end %>
</table>

</p>
